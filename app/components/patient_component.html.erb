<tr>
   <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
      <div class="flex items-center">
         <div class="ml-3">
            <p class="text-gray-900 whitespace-no-wrap">
               <%=@patient.name%>
            </p>
         </div>
      </div>
   </td>
   <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
      <p class="text-gray-900 whitespace-no-wrap"><%= @patient.gender.capitalize %></p>
   </td>
   <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
      <p class="text-gray-900 whitespace-no-wrap">
         <%= @patient.date_of_birth %>
      </p>
   </td>
      <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
      <p class="text-gray-900 whitespace-no-wrap">
         <%= @patient.city %>
      </p>
   </td>
      </td>
      <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
         <%if @patient.appointments.empty? %>
      <span class="inline-flex items-center justify-center w-4 h-4 ml-2 text-xs font-semibold">
         <%= @patient.appointments_count %>
      </span>
         <% else %>
            <span class="inline-flex items-center justify-center w-4 h-4 ml-2 text-xs font-semibold text-blue-800 bg-blue-200 rounded-full">
            <%= link_to @patient.appointments_count, patient_appointments_path(@patient), remote: true, data: {turbo_frame: "_top" }%>
            </span>
         <% end %>
      </p>

   </td>
   <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center">
    <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
   <%= link_to "Add appointment", new_patient_appointment_path(@patient), remote: true, data: {turbo_frame: "_top"}%>
</div>
   </td>
</tr>