<body class="antialiased">
   <div class="container mx-auto px-4 sm:px-8">
      <%= render HeaderComponent.new(title: "Patients")%>
      <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
         <div class="block relative py-4">
            <%= render 'patients/search_form'%>
         </div>
         <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
            <%= turbo_frame_tag 'patients' do %>
            <table class="min-w-full leading-normal">
               <thead>
                  <%= render 'patients/table_column_headers' %>
               </thead>
               <tbody>
                  <%= render PatientComponent.with_collection(@patients) %>
                  <% end %>
               </tbody>
            </table>
            <div class="px-5 py-5 bg-white flex flex-col xs:flex-row items-center xs:justify-between">
               <%== pagy_nav(@pagy, link_extra: 'data-turbo-action="advance"')%>
            </div>
         </div>
      </div>
   </div>
   </div>
   </div>
   </div>
</body>