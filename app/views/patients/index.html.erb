<body class="antialiased">
   <div class="container mx-auto px-4 sm:px-8">
      <%= render HeaderComponent.new(title: "Patients")%>
      <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 overflow-x-auto">
        <div class="block relative py-2">
                <%= render 'patients/search_form'%>
                </div>
         <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
               <thead>
                  <tr>
                     <th
                        class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <%= sort_link(@q, :last_name, "Name", default_order: :desc) %>
                     </th>
                     <th
                        class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <%= sort_link(@q, :gender)%>
                     </th>
                     <th
                        class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <%= sort_link(@q, :date_of_birth) %>
                     </th>
                     <th
                        class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <%= sort_link(@q, :city)%>
                     </th>
                     <th
                        class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Action
                     </th>
                  </tr>
               </thead>
               <tbody>
                    <%= render PatientComponent.with_collection(@patients) %>
               </tbody>
            </table>
         </div>
         <div class="px-5 py-5 bg-white flex flex-col xs:flex-row items-center xs:justify-between">
         <%== pagy_nav(@pagy)%>
         </div>
      </div>
   </div>
   </div>
   </div>
   </div>
</body>